
application {
  config {
    baseName AmawalAmazigh,
    applicationType monolith,
    packageName org.amawal,
    authenticationType jwt,
    prodDatabaseType mysql,
    buildTool maven,
    clientFramework angular
  }
  entities *
}


entity Groupe {
	groupeId Long,
    groupeCode String ,
    habilitationLevel Integer 
    }
    
entity Utilisateur {
	UtilisateurId Long,
	nom String,
	prenom String,
	adresseEmail String,
	avatar String,
	dateInscription Instant,
	validProfil Boolean,
	activateProfil Boolean,
	genre String,
	password String,
}
entity Category {
	categoryId Long ,
    securityLevel Integer,
    groupe Groupe,
    Utilisateurs Utilisateur
}
entity WordType {
	typeId Long,
	type String
}
entity WordInfo {
	wordInfoId Long,
	contributionDate Instant,
	validationDate Instant,
	etat Integer,
    contributeur Utilisateur,
    validateur Utilisateur
}

entity Region {
	reginId Long,
	regionNom String,
    pays String
}

entity Theme {
	themeId Long,
	theme String
}

entity Langue {
	langueId Long,
	langue String
}
entity Dialecte {
	dialecteId Long,
	dialecte String,
    region Region
}

entity TamazightToLang {
	traductionId Long,
    langue Langue,
    word AmawalWord
}
entity AmawalWord {
	wordId Long,
	orthographeTifinagh String,
	orthographeLatin String,
    wordType WordType,
    dialectes Dialecte,
    theme Theme,
    wordInfo WordInfo,
    traduction TamazightToLang
}

relationship ManyToOne {
	 Category{Utilisateurs} to Utilisateur
}


relationship ManyToOne {
	 AmawalWord{wordType} to WordType
}

relationship ManyToMany {
	 AmawalWord{dialecte} to Dialecte{word}
}
relationship ManyToOne {
	 AmawalWord{theme} to Theme
}
relationship OneToOne {
	 AmawalWord{wordInfo} to WordInfo
}
relationship OneToMany {
	 AmawalWord{traduction} to TamazightToLang
}
relationship OneToOne {
	 TamazightToLang{langue} to Langue
}
relationship OneToMany {
	 TamazightToLang{word} to AmawalWord
}
relationship ManyToMany {
	 Dialecte{region} to Region{dialecte}
}

relationship ManyToOne {
	 WordInfo{contributeur} to Utilisateur
}

relationship ManyToOne {
	 WordInfo{validateur} to Utilisateur
     
}
paginate Utilisateur with infinite-scroll
paginate AmawalWord  with pagination
paginate TamazightToLang  with pagination


service all with serviceImpl



    